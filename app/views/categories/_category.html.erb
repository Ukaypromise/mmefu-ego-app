<div id="<%= dom_id category %>" class= 'category-item'>
  <div>
    <%= image_tag category.icon, alt: 'icon', class:"image-icon" %>
  
    <% if can? :read, category %>
      <%= link_to category.name, category_expense_categories_path(category.id), class:"category-title" %>
    <% end %>
  </div>
  
  <div>
    <strong class="amount">Total: $<%= category.total %></strong>
  </div>
</div>